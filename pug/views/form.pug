html
    title="Lista de productos"
    include include/head.pug

    body
        div(class='container-md p-3')
            h1='Ingrese Producto'
            form(class='mb-3' action='/productos' method='POST')
                div(class='mb-3')
                    label(for='title' class='form-label')='Nombre'
                    input(type='text' class='form-control' id='title' name='title')
                div(class='mb-3')
                    label(for='price' class='form-label')='Precio'
                    input(type='number' class='form-control' id='price' name='price') 
                div(class='mb-3')
                    label(for='thumbnail' class='form-label')='Link de Imagen'
                    input(type='text' class='form-control' id='thumbnail' name='thumbnail') 
                button(type='submit' value="Submit" class="btn btn-primary")='Submit'
            a(href='/productos' class='btn btn-outline-info' tabindex='-1' role='button' aria-disabled='true')='Lista de productos'
        include include/footer.pug      
    
                